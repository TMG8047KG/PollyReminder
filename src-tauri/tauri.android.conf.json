{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pollyreminder",
  "version": "0.1.0",
  "identifier": "com.tmg8047kg.pollyreminder",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PollyReminder",
        "fullscreen": true,
        "backgroundColor": "#000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
